@model List<RazorTagHelpersNetCore.Pages.TagHelpersSamples.ComplexPage.Product>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Product</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td>#</td>
                <td>
                    No Data
                </td>
            </tr>
        }
        else
        {
            @foreach (var product in Model)
            {
                <tr>
                    <td>#@product.Number</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                </tr>
            }
        }
    </tbody>
</table>