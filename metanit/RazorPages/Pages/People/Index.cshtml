@page
@model RazorPages.Pages.People.IndexModel
@{
    ViewBag.Title = "Список пользователей";
}

<h2>@ViewBag.Title</h2>

<p><a asp-page="Create">Добавить пользователя</a></p>
<table class="table">
    <thead>
        <tr><th>Имя</th><th>Возраст</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var person in Model.People)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.Age</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@person.Id">Edit</a>
                    <form method="post">
                        <button type="submit" asp-page-handler="delete" asp-route-id="@person.Id">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>